<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="360sp"
        android:layout_height="360sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classified as:"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/result1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textclass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="2dp"
        android:clickable="true"
        android:src="@drawable/baseline_add_a_photo_24"
        android:backgroundTint="@color/primary"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lin_layout_early"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fertilizers:"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/chlorothalonil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chlorothalonil"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:textColorLink="@color/cyan"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/mancozeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mancozeb"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColorLink="@color/cyan"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/azoxystrobin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/azoxystrobin"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColorLink="@color/cyan"
            android:fontFamily="sans-serif-black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lin_layout_late"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fertilizers:"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/metalaxyl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/metalaxyl"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:textColorLink="@color/cyan"
            android:fontFamily="sans-serif-black"/>
        <TextView
            android:id="@+id/fluopicolide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fluopicolide"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColorLink="@color/cyan"
            android:fontFamily="sans-serif-black"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>